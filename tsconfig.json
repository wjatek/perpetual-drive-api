{
  "compilerOptions": {
    "target": "ES2020", // Target modern JavaScript
    "module": "CommonJS", // Use CommonJS for Node.js
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Allow default imports for CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce case-sensitive imports
    "moduleResolution": "node", // Resolve modules in Node.js style
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory for source files
    "resolveJsonModule": true, // Allow importing JSON files
    "skipLibCheck": true, // Skip type-checking in `node_modules`
    "baseUrl": ".", // Base directory for module resolution
    "paths": {
      "*": ["node_modules/*"] // Resolve node modules correctly
    },
    "typeRoots": ["./node_modules/@types"] // Include type definitions
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in `src`
  ],
  "exclude": [
    "node_modules", // Exclude dependencies
    "dist" // Exclude compiled output
  ]
}
